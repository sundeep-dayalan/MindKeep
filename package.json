{
  "name": "mind-keep",
  "displayName": "Mind keep",
  "version": "0.0.1",
  "description": "MindKeep is a revolutionary Chrome extension that functions as a user's personal AI assistant and \"second brain.\" It provides two primary interfaces: a lightning-fast Command Palette for retrieval and action, and an integrated Side Panel for note management and organization. It leverages Google's built-in Gemini Nano API to allow users to save, connect, and recall information, with all processing happening 100% on the user's local machine to ensure absolute privacy.",
  "author": "Sundeep Dayalan",
  "scripts": {
    "dev": "plasmo dev && node fix-manifest.js",
    "build": "plasmo build && node fix-manifest.js",
    "package": "plasmo package && node fix-manifest.js"
  },
  "dependencies": {
    "@langchain/core": "^1.0.1",
    "@tiptap/extension-color": "^3.7.1",
    "@tiptap/extension-highlight": "^3.7.1",
    "@tiptap/extension-image": "^3.7.1",
    "@tiptap/extension-link": "^3.7.1",
    "@tiptap/extension-subscript": "^3.7.1",
    "@tiptap/extension-superscript": "^3.7.1",
    "@tiptap/extension-table": "^3.7.1",
    "@tiptap/extension-table-cell": "^3.7.1",
    "@tiptap/extension-table-header": "^3.7.1",
    "@tiptap/extension-table-row": "^3.7.1",
    "@tiptap/extension-text-align": "^3.7.1",
    "@tiptap/extension-text-style": "^3.7.1",
    "@tiptap/extension-underline": "^3.7.1",
    "@tiptap/pm": "^3.7.1",
    "@tiptap/react": "^3.7.1",
    "@tiptap/starter-kit": "^3.7.1",
    "@xenova/transformers": "^2.17.2",
    "dexie": "^4.2.1",
    "langchain": "^1.0.1",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.4.1",
    "zod": "^4.1.12",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "latest",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "process": "^0.11.10",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "sidePanel",
      "contextMenus",
      "storage",
      "ai",
      "rewriter",
      "aiLanguageModelOriginTrial"
    ],
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    }
  }
}
